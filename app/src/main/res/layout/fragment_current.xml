<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="ua.kpi.ecampus.ui.activity.VotingStudentActivity">

  <ua.kpi.ecampus.ui.view.TextViewDrawableSize
      style="@style/Margin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:drawableLeft="@drawable/icon_calendar"
      android:text="Опитування"
      android:gravity="center"
      android:drawablePadding="16dp"
      android:textStyle="bold"
      android:textSize="16sp"
      app:compoundDrawableHeight="28dp"
      app:compoundDrawableWidth="28dp"/>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/spinner_current_terms"
        style="@style/Margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Стан:\t"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/sNotToday"
          android:textColor="@color/colorPrimary"
          />
    </LinearLayout>
  </FrameLayout>

  <ua.kpi.ecampus.ui.view.TextViewDrawableSize
      style="@style/Margin"
      android:id="@+id/tv_title_current_teachers"
      android:visibility="invisible"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:gravity="center"
      android:drawablePadding="16dp"
      android:drawableLeft="@drawable/icon_grad_hat"
      android:textSize="16sp"
      app:compoundDrawableHeight="28dp"
      app:compoundDrawableWidth="28dp"
      android:text="Викладачі"
      android:textStyle="bold"/>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerview_current_teachers"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      android:scrollbars="vertical"/>

</LinearLayout>
